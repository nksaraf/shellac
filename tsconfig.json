{
  "compilerOptions": {
    /* Basic Options */
    // "incremental": true,                   /* Enable incremental compilation */
    "target": "esnext",
    "module": "commonjs",
    "lib": ["es2020"],
    "declaration": true,
    "importHelpers": true,
    "downlevelIteration": true,
    //    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    //    "noUnusedLocals": true,
    //    "noUnusedParameters": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}
